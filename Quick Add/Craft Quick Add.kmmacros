						<string>&lt;html&gt;
  &lt;head&gt;
    &lt;title&gt;Add to Craft Inbox&lt;/title&gt;
    &lt;style type="text/css"&gt;
      body {
        font-family: system-ui;
        font-size: medium;
        background-color: #ececec;
        margin: 5px;
      }
      textarea, input {
        width: 90vw;
        font-size: small;
        border: solid #ececec 1px;
	margin-bottom: 5px;
      }
      textarea:focus, input:focus {
        border: solid #81adef 1px;
      }
      .Div {
        margin-top: 20px;
        text-align: center;
      }
      .btnDefault,
      .btnCancel {
        border-radius: 5px;
        color: black;
        text-decoration: none;
        margin-left: 5px;
        padding: 2px 20px 2px 20px;
        filter: drop-shadow(1px 1px 1px #c8c8c8);
      }

      .btnDefault {
        background: #1385ff;
        color: white;
        border: 0px;
      }

      .btnCancel {
        background: white;
        color: black;
        border: 0px;
      }

      .btnDefault:active,
      .btnCancel:active {
       background-color:  #006feb;
       color: white;
      }
      .btnCancel:active ~ .btnDefault {
         background: white;
         color: black;
    &lt;/style&gt;
    &lt;script&gt;
      document.addEventListener(
        "keydown",
        (event) =&gt; {
          if (event.metaKey &amp;&amp; event.keyCode == "13") {
            window.KeyboardMaestro.Submit('Save');
          }
        },
        false
      );
    &lt;/script&gt;
  &lt;/head&gt;

  &lt;body data-kmwindow="500,215"&gt;
    &lt;form action="#" method="post" id="Form"&gt;
      &lt;div class="Div"&gt;
            &lt;input type="text" name="Title" autofocus&gt;&lt;br&gt;
            &lt;textarea
              maxlength="2000"
              class="textAreaField"
              name="Content"
              rows="6"
            &gt;&lt;/textarea&gt;
      &lt;/div&gt;
      &lt;div class="Div"&gt;
        &lt;button
          class="btnCancel"
          name="Cancel"
          type="button"
          title="Press ESC to cancel"
          onclick="window.KeyboardMaestro.Cancel('Cancel')"
        &gt;
          Cancel
        &lt;/button&gt;
        &lt;button
          class="btnDefault"
          name="Save"
          type="submit"
          title="Press RETURN to submit"
          onclick="window.KeyboardMaestro.Submit('Save')"
        &gt;
          Save
        &lt;/button&gt;
      &lt;/div&gt;
    &lt;/form&gt;
  &lt;/body&gt;
&lt;/html&gt;
